                <a class="btn bg-gray-200 rounded-circle px-4 mb-2  dashboard-link" asp-action="GetWalletTransactions" asp-controller="WalletTransaction">
                    <span class="flaticon-wallet font-size-10 btn-icon__inner text-primary"></span>
                </a>
                <div class="font-size-3 mb-xl-1">

                    </div>
                </div>
            </div>
            <div class="col">
                <div class="border border-left-0 py-6 text-center dashboard-link">
                    <a class="btn bg-gray-200 rounded-circle px-4 mb-2  dashboard-link" asp-action="GetWishlistBooks" asp-controller="MyAccount">
                        <span class="flaticon-heart font-size-10 btn-icon__inner text-primary"></span>
                    </a>
                    <div class="font-size-3 mb-xl-1">
                        <a class="text-black" asp-action="GetWishlistBooks" asp-controller="MyAccount">@SharedLocalizer["Index.wishlist"]</a>
                    </div>
                </div>
            </div>
        </div>
    }

            <p class="mb-0 font-size-2 ml-lg-1 text-gray-600">@SharedLocalizer["User.Text"]</p>
        </div>*@
    <div class="row no-gutters row-cols-1 row-cols-md-2 row-cols-lg-2">
        <div class="col">
            <div class="border py-6 text-center">
                <a class="btn bg-gray-200 rounded-circle px-4 mb-2 dashboard-link" asp-action="AccountDetails" asp-controller="MyAccount">
                    <span class="flaticon-user-1 font-size-10 btn-icon__inner text-primary"></span>
                </a>
                <div class="font-size-3 mb-xl-1">
                    <a class="text-black" asp-action="AccountDetails" asp-controller="MyAccount">@SharedLocalizer["Index.Account Details"]</a>
                </div>
            </div>
        </div>

        <div class="col">
            <div class="border border-left-0 py-6 text-center">
                <a class="btn bg-gray-200 rounded-circle px-4 mb-2  dashboard-link" asp-action="BookList" asp-controller="MyAccount">
                    <span class="flaticon-credit font-size-10 btn-icon__inner text-primary"></span>
                </a>
                <div class="font-size-3 mb-xl-1">

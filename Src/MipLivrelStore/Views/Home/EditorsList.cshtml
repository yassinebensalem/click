@using Microsoft.AspNetCore.Identity
@using DDD.Domain.Models
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
@using Microsoft.Extensions.Localization
@using Microsoft.AspNetCore.Localization
@inject IStringLocalizer<SharedResource> SharedLocalizer
@using Microsoft.AspNetCore.Builder
@using Microsoft.Extensions.Options
@inject IOptions<RequestLocalizationOptions> LocOptions
@using DDD.Application.ViewModels;
@model List<SingleEditorDetailsVM>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Mip Livrel";
    var requestCulture = Context.Features.Get<IRequestCultureFeature>();
    var selectedCulture = requestCulture.RequestCulture.Culture;
}

<div class="site-content space-bottom-3">
    <main id="main">
        <div class="product">
            <div class="page-header border-bottom ">
                <div class="container">
                    <div class="d-md-flex justify-content-between align-items-center py-4">
                        <h1 class="page-title font-size-3 font-weight-medium m-0 text-lh-lg"> @SharedLocalizer["Menu.Editors"]</h1>
                        <nav class="woocommerce-breadcrumb font-size-2">
                            <a href="../Home/Index" class="h-primary">@SharedLocalizer["Menu.Home"]</a>
                            <span class="breadcrumb-separator mx-1"><i class="fas  @(selectedCulture.Name.Equals("ar") ? "fa-angle-left" : " fa-angle-right")"></i></span>
                            <a asp-controller="Home" asp-action="GetEditorsList" class="h-primary"> @SharedLocalizer["Menu.Editors"]</a>
                        </nav>
                    </div>
                </div>
            </div>
            <section class="space-bottom-3">
                <div class="container">
                    <div class="row">
                        <div class="col-sm-4 ml-auto my-3">
                            <div class="input-group">
								<input class="searchTheKey_EL form-control bg-white-100 min-width-380 py-2d75 height-4 border-white-100 " id="EditorsListId" type="search" placeholder="@SharedLocalizer["Booklist.SearchEditors"]" aria-label="Search">
                            </div>
                            <button class="btn btn-outline-success my-2 my-sm-0 sr-only" type="submit">@SharedLocalizer["Booklist.Search"] </button>
                        </div>
                    </div>
                    <div class="row">
                        <div id="" class="content-area order-2 my-4">
                            <div class="tab-content" @*style="overflow-y: auto; height: 80%"*@>
                                <div role="tabpanel">
                                    <partial name="../Home/GridViewEditorsList" model="@Model" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </main>
</div>
